<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgapps"
    tools:context=".MainActivity">

    <!-- mendefinisikan struktur layout desain menggunakan linear layout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- digunakan untuk mengatur style profil my dashboard-->
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDashboard"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:text="Kategori Emas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@+id/txtDashboard"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:text="5 item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!-- layout yang digunakan untuk membuat cardview dan grid layout-->
        <GridLayout
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- row 1 column 1-->
            <!--membuat cardview-->
            <android.support.v7.widget.CardView
                android:layout_margin="12dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/anting"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/btn_Anting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anting"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="Anting"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- row 1 column 2-->
            <!--membuat cardview-->
            <android.support.v7.widget.CardView
                android:layout_margin="12dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/gelang"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/btn_Gelang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Gelang"
                        android:textSize="15sp"
                        android:onClick="Gelang"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- row 2 column 1-->
            <!--membuat cardview-->
            <android.support.v7.widget.CardView
                android:layout_margin="12dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/cincin"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/btn_Cincin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cincin"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="Cincin"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- row 2 column 2-->
            <!--membuat cardview-->
            <android.support.v7.widget.CardView
                android:layout_margin="12dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/liontin"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/btn_Liontin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liontin"
                        android:layout_gravity="center_horizontal"
                        android:onClick="Liontin"
                        android:textSize="15sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- row 3 column 1-->
            <!--membuat cardview-->
            <android.support.v7.widget.CardView
                android:layout_margin="12dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/kalung"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/btn_Kalung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalung"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15sp"
                        android:onClick="Kalung"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </GridLayout>

    </LinearLayout>


</ScrollView>